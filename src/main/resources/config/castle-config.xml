<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">

    <!-- bean definitions here -->
    <context:property-placeholder location="classpath:castle.properties"/>

    <bean id="zamek" class="com.example.demo_spring_01.domain.Castle" init-method="buildCastle" destroy-method="destroyCastle">
        <constructor-arg index="0" ref="lancelot"/>
        <property name="name" value="${castle_name:East Watch}"/>
    </bean>

    <bean id="tournament" class="com.example.demo_spring_01.domain.Tournament">
        <property name="knight" ref="percival"/>
    </bean>

</beans>